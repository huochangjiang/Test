<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="cn.yumutech.unity.LeaderActivitysActivity"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbar"
        app:contentInsetStart="0dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="centerInside"
                android:layout_width="50dp"
                android:id="@+id/back"
                android:src="@drawable/gimi_back"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text="时政新闻"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:id="@+id/tv_home"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/searchImage"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/search"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <include
        android:layout_below="@+id/id_toolbar"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:id="@+id/netconnect"
        android:layout_height="match_parent"
        layout="@layout/net_connect"
        android:layout_width="match_parent"/>
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search">
        <include
            layout="@layout/progressbar"
            android:id="@+id/myprog"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </RelativeLayout>
    <cn.yumutech.weight.MyEditText
        android:layout_marginTop="5dp"
        android:layout_below="@+id/rl_feilei"
        android:paddingRight="5dp"
        android:id="@+id/search"
        android:layout_gravity="center_vertical"
        android:imeOptions="actionSearch"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/search"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/item_title"
        android:textSize="15sp"
        android:textColorHint="@color/zitiyanse"
        android:background="@drawable/edittext_frame"
        android:layout_marginLeft="10dp"
        android:drawablePadding="5dp"
        android:focusableInTouchMode="true"
        android:hint="搜索">
    </cn.yumutech.weight.MyEditText>

    <RelativeLayout
        android:id="@+id/rl_feilei"
        android:layout_below="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/xian"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/fengexianone"/>
        <LinearLayout
            android:layout_below="@+id/xian"
            android:id="@+id/ll_feilei"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:focusable="true">

            <GridView
                android:id="@+id/gridView"
                android:numColumns="4"
                android:background="@color/fengexianone"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </GridView>
            <HorizontalScrollView
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/horscroll_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" >
            </HorizontalScrollView>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/zuomengceng"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/youmengceng"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <include
        android:id="@+id/tishi"
        layout="@layout/nodata_item"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/pull_to_refresh"
        android:layout_below="@+id/search"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyleview"
           />
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>
