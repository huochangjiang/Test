<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/white"
    tools:context="cn.yumutech.unity.LeadersDetaislActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:scaleType="centerInside"
                android:layout_width="50dp"
                android:id="@+id/back"
                android:src="@drawable/gimi_back"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text="详情"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:id="@+id/tv_home"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/id_toolbar">
    <include
        layout="@layout/progressbar"
        android:id="@+id/myprog"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    </RelativeLayout>
    <!--<ScrollView-->
        <!--android:id="@+id/scrollview"-->
        <!--android:descendantFocusability="blocksDescendants"-->
        <!--android:layout_below="@+id/id_toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/id_toolbar"
            android:layout_height="match_parent">
    <include
        android:layout_marginTop="10dp"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/detais_title" />
    <WebView
        android:layout_below="@+id/title"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:id="@+id/webview"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/xiangqing"
        android:layout_marginRight="@dimen/xiangqing"></WebView>
        </LinearLayout>
    <!--</ScrollView>-->
</RelativeLayout>
