<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="cn.yumutech.unity.LeadersDetaislActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:scaleType="centerInside"
                android:layout_width="50dp"
                android:id="@+id/back"
                android:src="@drawable/gimi_back"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text="重点项目"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:id="@+id/tv_home"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/id_toolbar">
        <include
            layout="@layout/progressbar"
            android:id="@+id/myprog"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollview"
        android:descendantFocusability="blocksDescendants"
        android:layout_below="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <cn.yumutech.weight.CenterTextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:maxLines="2"
                android:text="男职工关爱行动"
                android:textColor="@color/small_title"
                android:textSize="@dimen/title_size"
                android:layout_height="wrap_content" />


            <RelativeLayout
                android:id="@+id/rl_progressBar"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:layout_centerInParent="true"
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:max="100"
                    android:layout_margin="15dp"
                    android:progress="50"
                    android:progressDrawable="@drawable/shape_progressbar_mini"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/tv_progress"
                    android:layout_alignLeft="@+id/progressBar"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:text="已完成:  50.0%"
                    android:textSize="13sp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/fengexianone"
                ></View>

<LinearLayout
    android:layout_marginTop="5dp"
    android:background="@color/fengexianone"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="42dp">
    <RelativeLayout
        android:id="@+id/lin_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/zhongdianxuan">
    <TextView
        android:id="@+id/tv_jiben"
        android:layout_width="wrap_content"
        android:text="基本情况"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lin_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/zhongdianwei">
    <TextView
        android:id="@+id/tv_work"
        android:layout_width="wrap_content"
        android:text="工作要求"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lin_three"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/zhongdianwei">
    <TextView
        android:id="@+id/tv_tuijin"
        android:layout_width="wrap_content"
        android:text="推进情况"
       android:layout_centerInParent="true"
        android:layout_height="wrap_content" />
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lin_four"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/zhongdianwei">
    <TextView
        android:id="@+id/tv_cunzai"
        android:layout_width="wrap_content"
        android:text="存在问题"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />
        </RelativeLayout>
</LinearLayout>

        </LinearLayout>
    </ScrollView>
    <WebView
        android:layout_below="@+id/scrollview"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:id="@+id/webview"
        android:layout_height="wrap_content"></WebView>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:id="@+id/ll2"
        android:layout_below="@+id/webview"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="分类：    "
            android:textColor="@color/item_title"
            android:textSize="@dimen/title_size_smaller"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/laiyuan"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="四川新闻网"
            android:textSize="@dimen/title_size_smaller"
            android:textColor="@color/item_title"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:text="2016-11-08-12  11:09"
            android:layout_marginRight="5dp"
            android:textColor="@color/item_title"
            android:textSize="@dimen/title_size_smaller"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
