<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0f0f0">

    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:scaleType="centerInside"
                android:layout_width="40dp"
                android:id="@+id/back"
                android:src="@drawable/gimi_back"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我发布的"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:text="发布任务"
                android:textColor="@color/white"
                android:id="@+id/tv_home"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_below="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/f0f0f0">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题："
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_edit1"
        android:layout_below="@+id/rl_title"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_title"
            android:background="@drawable/edittext_frame"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_neirong"
        android:layout_below="@+id/rl_edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/f0f0f0">
        <TextView
            android:id="@+id/neirong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容："
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_edit2"
        android:layout_below="@+id/rl_neirong"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_neirong"
            android:gravity="top"
            android:background="@drawable/edittext_frame"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"

            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/xian"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/f0f0f0"
        android:layout_below="@+id/rl_edit2"/>
    <RelativeLayout
        android:id="@+id/rl_who"
        android:background="@color/white"
        android:layout_below="@+id/xian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="指派给"
            android:padding="10dp"
            android:textColor="@color/black" />
        <RelativeLayout
            android:id="@+id/rl_zhipairen"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_toLeftOf="@+id/image_who"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/zhubanren"
                android:layout_toLeftOf="@+id/who_zhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:textColor="@color/item_title"
                android:text="主办人:"/>
        <TextView
            android:id="@+id/who_zhu"
            android:layout_alignTop="@+id/zhubanren"
          android:layout_toLeftOf="@+id/xiebanren"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:textColor="@color/item_title"
            android:singleLine="true" />
            <TextView
                android:id="@+id/xiebanren"
                android:layout_alignTop="@+id/zhubanren"
               android:layout_toLeftOf="@+id/who_xie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:textColor="@color/item_title"
                android:text="协办人:"/>
            <TextView
                android:id="@+id/who_xie"
                android:layout_alignTop="@+id/zhubanren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李四"
                android:textSize="13sp"
                android:textColor="@color/item_title"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/image_who"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/next"/>
        <View
            android:layout_below="@id/text_who"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/fengexianone"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_end_time"
        android:background="@color/white"
        android:layout_below="@+id/rl_who"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="截止日期："
            android:padding="10dp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/image_end_time"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/next"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_toLeftOf="@+id/image_end_time"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/choose_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/item_title"
                android:layout_alignParentRight="true"
                />
            </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/logo"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>