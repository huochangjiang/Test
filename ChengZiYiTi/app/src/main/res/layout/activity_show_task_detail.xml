        <View
            android:id="@+id/xian"
            android:layout_below="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="@color/fengexianone"
            android:layout_marginTop="10dp"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@+id/xian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="none">
    <TextView
        android:id="@+id/neirong"
        android:text="测试内容"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </ScrollView>

        <RelativeLayout
            android:id="@+id/wanchen"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/logo"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:textColor="@color/white"/>
        </RelativeLayout>
        <View
            android:id="@+id/fengexian"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/f0f0f0"
            android:layout_below="@+id/scrollView"/>
        <RelativeLayout
            android:id="@+id/rl_wancheng"
            android:layout_width="match_parent"
            android:layout_below="@+id/fengexian"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/wancheng_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务已完成"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/wanchenzhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成者："
                android:textSize="15sp"
                android:textColor="@color/juse"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/wancheng_title"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二狗子"
                android:textSize="15sp"
                android:textColor="@color/juse"
                android:layout_toRightOf="@+id/wanchenzhe"
                android:layout_alignTop="@+id/wanchenzhe"/>
            <TextView
                android:id="@+id/zhuangtaishijian1"
                android:layout_toLeftOf="@+id/complete_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/juse"
                android:layout_alignTop="@+id/complete_time"
                android:layout_marginRight="5dp"
                android:text="接受时间:"/>
            <TextView
                android:id="@+id/complete_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2012-02-05 10:32:99"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/wanchenzhe"
                android:layout_marginRight="10dp"/>
            <View
                android:id="@+id/wancheng_xian"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/fengexianone"
                android:layout_below="@+id/wanchenzhe"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/wancheng_neirong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wancheng_xian"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="一长串一串串一长串一串串一长串一串串一长串一串串"/>
            <View
                android:id="@+id/fenge"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/fengexianone"
                android:layout_below="@+id/wancheng_neirong"
                android:layout_marginTop="10dp"/>
            <GridView
                android:id="@+id/gridView"
                android:layout_below="@+id/fenge"
                android:numColumns="4"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                >
            </GridView>
            <ListView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/gridView"
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
        </RelativeLayout>
    </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/complete"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/logo"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/accept"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <Button
            android:id="@+id/bt_accept"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="接受"
            android:background="@drawable/logo"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/assign"
            android:layout_width="150dp"
            android:layout_toRightOf="@+id/bt_accept"
            android:layout_height="match_parent"
            android:text="指派"
            android:layout_marginLeft="20dp"
            android:background="@drawable/logo"
            android:textColor="@color/white"/>
    </RelativeLayout>

</RelativeLayout>