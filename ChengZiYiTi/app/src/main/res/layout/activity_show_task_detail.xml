<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:scaleType="centerInside"
                android:layout_width="40dp"
                android:id="@+id/back"
                android:src="@drawable/gimi_back"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我发布的"
                android:textSize="18sp"
                android:visibility="gone"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:text="任务详情"
                android:textColor="@color/white"
                android:id="@+id/tv_home"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <include
        layout="@layout/progressbar"
        android:layout_marginTop="100dp"
        android:id="@+id/myprog"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <ScrollView
        android:layout_below="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">
    <RelativeLayout
        android:id="@+id/all"

        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="我把获取数据写了，只差布局了"
        android:gravity="center"/>
        <RelativeLayout
            android:id="@+id/rl_fabu"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/faburen"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布人:"/>
            <TextView
                android:id="@+id/tv_faburen"
                android:layout_toRightOf="@+id/faburen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="陈"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/tv_fabushijian"
                android:layout_marginRight="10dp"
                android:text="2016-12-10"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toLeftOf="@+id/tv_fabushijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:text="发布时间:"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已接受"
            android:textColor="@color/juse"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/rl_fabu"/>
        <TextView
            android:id="@+id/zhuangtaishijian"
            android:layout_toLeftOf="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/juse"
            android:layout_alignTop="@+id/date"
            android:layout_marginRight="5dp"
            android:text="截止时间:"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-12-10"
            android:textColor="@color/juse"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/status"/>
        <View
            android:layout_below="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/fengexianone" />
    </RelativeLayout>

        <cn.yumutech.weight.MyListview
            android:id="@+id/listview"
            android:listSelector="@color/white"
            android:divider="@null"
            android:layout_below="@+id/rl_head"
