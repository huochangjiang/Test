<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbar"
        app:contentInsetStart="0dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:scaleType="centerInside"
                android:layout_width="40dp"
                android:id="@+id/back"
                android:src="@drawable/gimi_back"
                android:layout_height="match_parent" />
            <TextView
                android:layout_toRightOf="@+id/back"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="群组"
                android:textSize="18sp"
                android:visibility="gone"
                android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="他山之石"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_message"
                    android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

     <include
         android:layout_below="@+id/id_toolbar"
    android:layout_centerVertical="true"
    android:visibility="gone"
    android:id="@+id/netconnect"
    android:layout_height="match_parent"
    layout="@layout/net_connect"
    android:layout_width="match_parent"/>

    <include
        layout="@layout/progressbar"
        android:layout_marginTop="100dp"
        android:id="@+id/myprog"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <cn.yumutech.weight.MyEditText
        android:layout_below="@+id/id_toolbar"
        android:paddingRight="5dp"
        android:id="@+id/search"
        android:layout_gravity="center_vertical"
        android:imeOptions="actionSearch"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/search"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/item_title"
        android:textSize="15sp"
        android:textColorHint="@color/item_title"
        android:background="@drawable/edittext_frame"
        android:layout_marginLeft="10dp"
        android:drawablePadding="5dp"
        android:focusableInTouchMode="true"
        android:hint="搜索">
    </cn.yumutech.weight.MyEditText>

    <View
        android:id="@+id/xian"
        android:layout_below="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/fengexianone"/>
    <RelativeLayout
        android:id="@+id/rl_feilei"
        android:layout_below="@+id/xian"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout

            android:id="@+id/ll_feilei"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:focusable="true">

            <HorizontalScrollView
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/horscroll_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" >
            </HorizontalScrollView>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/zuomengceng"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/youmengceng"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <include
        android:id="@+id/tishi"
        layout="@layout/nodata_item"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_feilei"/>
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:layout_width="match_parent"
        android:id="@+id/pull_to_refresh"
        android:scrollbars="none"

        android:overScrollMode="never"
        app:ptrShowIndicator="false"
        android:background="@color/white"
        android:layout_below="@+id/rl_feilei"
        android:layout_height="match_parent">
    <cn.yumutech.weight.MyListview
        android:id="@+id/listview"
        android:scrollbars="none"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </cn.yumutech.weight.MyListview>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</RelativeLayout>