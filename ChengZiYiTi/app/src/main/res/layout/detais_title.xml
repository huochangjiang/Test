<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_below="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <cn.yumutech.weight.CenterTextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:maxLines="2"
            android:textStyle="bold"
            android:textColor="@color/small_title"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:visibility="gone"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv1"
            android:id="@+id/rlll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="规划"
                android:id="@+id/guihua"
                    android:textColor="@color/juse"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="0元"
                android:textColor="@color/red"
                android:id="@+id/money"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:id="@+id/ll2"
            android:layout_below="@+id/rlll"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:text="来源    "
                android:textColor="@color/item_title"
                android:textSize="@dimen/title_size_smaller"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/laiyuan"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:text="四川新闻网"
                android:textSize="@dimen/title_size_smaller"
                android:textColor="@color/item_title"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:text="2016-11-08-12  11:09"
                android:layout_marginRight="5dp"
                android:textColor="@color/item_title"
                android:textSize="@dimen/title_size_smaller"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_below="@+id/ll2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:background="@color/fengexianone"
            android:layout_height="0.5dp"></View>


    </RelativeLayout>
</LinearLayout>