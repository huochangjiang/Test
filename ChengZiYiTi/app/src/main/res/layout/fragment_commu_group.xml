<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">
    <ScrollView
        android:background="@color/white"
        android:id="@+id/scrollview"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/rl_one"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:gravity="center_horizontal"
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            >
        <RelativeLayout
            android:layout_centerInParent="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/newgroup"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:src="@drawable/xinjianqunzu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新建讨论组"
            android:textSize="15sp"
            android:layout_below="@+id/newgroup"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/two"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/one"
            android:layout_marginBottom="20dp">
        <RelativeLayout
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/tashan"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:scaleType="centerInside"
                android:src="@drawable/tashanzhishi"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="建言献策"
                android:textSize="15sp"
                android:layout_below="@+id/tashan"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_two"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fengexianone"
        >

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我加入的讨论组"
        android:textSize="16sp"
        android:textColor="@color/small_title"
        />

    </RelativeLayout>
    <cn.yumutech.weight.MyListview
        android:id="@+id/listview"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </cn.yumutech.weight.MyListview>
        </LinearLayout>
</ScrollView>
</LinearLayout>