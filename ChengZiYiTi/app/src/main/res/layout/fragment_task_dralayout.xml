<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.yumutech.fragments.DralayoutFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:background="@color/fengexianone"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_height="60dp">
        <cn.yumutech.weight.MyEditText
            android:id="@+id/search"
            android:layout_centerHorizontal="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_weight="1"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:drawableLeft="@drawable/search"
            android:layout_centerVertical="true"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:background="@drawable/edittext_frame"
            android:layout_marginLeft="10dp"
            android:drawablePadding="5dp"
            android:focusableInTouchMode="true"
            android:hint="搜索">

        </cn.yumutech.weight.MyEditText>
    </RelativeLayout>
    <include
        android:id="@+id/wuquanxian"
        android:layout_below="@+id/rl_search"
        layout="@layout/noquanxian"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_above="@+id/rl_send"/>
    <ListView
        android:layout_below="@+id/rl_search"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:id="@+id/listview"
        android:layout_above="@+id/rl_send"
        android:layout_height="wrap_content">
    </ListView>
    <include
        layout="@layout/progressbar"
        android:id="@+id/myprog"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <RelativeLayout
        android:id="@+id/rl_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/logo"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="50dp"
        android:src="@drawable/celanshouqi"
        android:layout_centerVertical="true"
        android:id="@+id/iv_huadong"
        android:scaleType="centerInside"
        android:layout_height="50dp"
        android:visibility="gone"/>
</RelativeLayout>
