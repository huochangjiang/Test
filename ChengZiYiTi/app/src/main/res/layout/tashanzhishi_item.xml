<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="美国总统选举活动"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:id="@+id/image"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_marginTop="5dp"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/tou_bei"/>
    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/image"
        android:text="不要问我为啥子这么写我只是想测试一哈"
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:lines="5"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/fenlei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分类："
        android:layout_below="@+id/image"
        android:layout_alignLeft="@+id/image"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/myclass"
        android:layout_below="@+id/image"
        android:layout_toRightOf="@+id/fenlei"
        android:layout_alignTop="@+id/fenlei"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="国际"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="2016-9-11 11:08：34"
        android:layout_below="@+id/image"
        android:layout_alignTop="@+id/fenlei"/>
    <TextView
        android:id="@+id/source"
        android:layout_below="@+id/fenlei"
        android:layout_alignLeft="@id/fenlei"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="来源："
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/tv_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总体规划"
        android:layout_toRightOf="@+id/source"
        android:layout_alignTop="@+id/source"/>
    <RelativeLayout
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/browse"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/fen_xuan"
            />
        <TextView
            android:id="@+id/browse_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/browse"/>
        <ImageView
            android:id="@+id/comments"
            android:layout_toRightOf="@+id/browse_num"
            android:layout_marginLeft="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/fen_xuan"
            />
        <TextView
            android:id="@+id/comments_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/comments"/>
    </RelativeLayout>

    <View
        android:id="@+id/xian"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/source"
        android:background="@color/fengexianone" />

</RelativeLayout>